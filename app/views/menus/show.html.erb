<br><br>
<div class="menus-container container py-3">
  <h2 class="text-center" >Cardápio de <%= @menu.date.strftime("%A, %d/%m/%Y") %></h2>
  <div class="d-flex my-3" >
    <div class="menu-item col-sm" >
      <% if @menu.breakfast %>
        <h4>Café da manhã</h4>
        <br>
        <p><strong>Bebidas quentes:</strong> <%= @menu.breakfast.hot_drinks %></p>
        <p><strong>Vegetariano:</strong> <%= @menu.breakfast.vegetarian_drink %></p>
        <p><strong>Achocolatado:</strong> <%= @menu.breakfast.chocolate_milk %></p>
        <p><strong>Pão:</strong> <%= @menu.breakfast.bread %></p>
        <p><strong>Pão Vegetariano:</strong> <%= @menu.breakfast.vegetarian_bread %></p>
        <p><strong>Margarina:</strong> <%= @menu.breakfast.margarine %></p>
        <p><strong>Margarina Vegetariana:</strong> <%= @menu.breakfast.vegetarian_margarine %></p>
        <p><strong>Complemento:</strong> <%= @menu.breakfast.complement %></p>
        <p><strong>Complemento Vegetariana:</strong> <%= @menu.breakfast.vegetarian_complement %></p>
        <p><strong>Fruta:</strong> <%= @menu.breakfast.fruit %></p>
        <div class="text-center">
          <%= link_to 'Editar Café da Manhã', edit_breakfast_path(@menu.breakfast), class:"menus-button btn btn-primary my-2 mr-4" %>
        </div>
      <% else %>
        <div class="text-center">
          <%= link_to 'Criar Café da Manhã', new_breakfast_path(menu_id: @menu.id), class:"menus-button btn btn-primary my-2 mr-4" %>
        </div>
      <% end %>
    </div>
    <div class="menu-item col-sm mx-3" >
      <% if @menu.lunch %>
        <h4>Almoço</h4>
        <br>
        <p><strong>Salada</strong> <%= @menu.lunch.salad %></p>
        <p><strong>Molho:</strong> <%= @menu.lunch.sauce %></p>
        <p><strong>Prato Principal:</strong> <%= @menu.lunch.main_course %></p>
        <p><strong>Guarnição:</strong> <%= @menu.lunch.garnish %></p>
        <p><strong>Vegetariano:</strong> <%= @menu.lunch.vegetarian_dish %></p>
        <p><strong>Acompanhamentos:</strong> <%= @menu.lunch.accompaniments %></p>
        <p><strong>Sobremesa:</strong> <%= @menu.lunch.dessert %></p>
        <p><strong>Refresco:</strong> <%= @menu.lunch.juice %></p>
        <div class="text-center">
          <br><br><br>
          <%= link_to 'Editar Almoço', edit_lunch_path(@menu.lunch), class:"menus-button btn btn-primary my-2 mr-4" %>
        </div>
      <% else %>
        <div class="text-center">
          <%= link_to 'Criar Almoço', new_lunch_path(menu_id: @menu.id), class:"menus-button btn btn-primary my-2 mr-4" %>
        </div>
      <% end %>
    </div>
    <div class="menu-item col-sm" >
      <% if @menu.dinner %>
        <h4>Jantar</h4>
        <br>
        <p><strong>Salada</strong> <%= @menu.dinner.salad %></p>
        <p><strong>Molho:</strong> <%= @menu.dinner.sauce %></p>
        <p><strong>Sopa:</strong> <%= @menu.dinner.soup %></p>
        <p><strong>Prato Principal:</strong> <%= @menu.dinner.main_course %></p>
        <p><strong>Vegetariano:</strong> <%= @menu.dinner.vegetarian_dish %></p>
        <p><strong>Acompanhamentos:</strong> <%= @menu.dinner.accompaniments %></p>
        <p><strong>Sobremesa:</strong> <%= @menu.dinner.dessert %></p>
        <p><strong>Refresco:</strong> <%= @menu.dinner.juice %></p>
        <div class="text-center">
        <br><br><br>
          <%= link_to 'Editar Jantar', edit_dinner_path(@menu.dinner), class:"menus-button btn btn-primary my-2 mr-4" %>
        </div>
      <% else %>
        <div class="text-center">
          <%= link_to 'Criar Jantar', new_dinner_path(menu_id: @menu.id), class:"menus-button btn btn-primary my-2 mr-4" %>
        </div>
      <% end %>
    </div>
  </div>
  <div class="text-center">
    <%= link_to 'Edit', edit_menu_path(@menu), class:"menus-button btn btn-primary px-5" %>
  </div>
</div>