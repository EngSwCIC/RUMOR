<p id="notice"><%= notice %></p>

<div class="container">
  <h1>Customer Satisfactions</h1>
  <h2> Listar por refeições: </h2>
  <div style="display:flex;">
      <p><%= link_to 'Café', breakfast_satisfactions_path, class:"btn btn-primary m-2"%></p>
      <p><%= link_to 'Almoço', lunch_satisfactions_path, class:"btn btn-primary m-2"%></p>
      <p><%= link_to 'Janta', dinner_satisfactions_path, class:"btn btn-primary m-2"%></p>
  </div>

  <h2> Listar por grupo de usuários: </h2>
  <div style="display:flex;">
      <p><%= link_to 'Grupo 1', user_one_groups_path, class:"btn btn-primary m-2"%></p>
      <p><%= link_to 'Grupo 2', user_two_groups_path, class:"btn btn-primary m-2"%></p>
      <p><%= link_to 'Grupo 3', user_three_groups_path	, class:"btn btn-primary m-2"%></p>
  </div>

  <table class="table table-striped">
    <thead style="background-color: #F28D3C; color: white;">
      <tr>
        <th>User group</th>
        <th>Meal</th>
        <th>Rating</th>
        <th>Like</th>
        <th>Disgust</th>
        <th>Suggestion</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @customer_satisfactions.each do |customer_satisfaction| %>
        <tr>
          <td><%= customer_satisfaction.user_group %></td>
          <td><%= customer_satisfaction.meal %></td>
          <td><%= customer_satisfaction.rating %></td>
          <td><%= customer_satisfaction.like %></td>
          <td><%= customer_satisfaction.disgust %></td>
          <td><%= customer_satisfaction.suggestion %></td>
          <td><%= link_to 'Ver detalhes', customer_satisfaction,class:"btn btn-primary m-2" %></td>
          <!-- <td><%= link_to 'Edit', edit_customer_satisfaction_path(customer_satisfaction) %></td> !-->
          <td><%= link_to 'Apagar', customer_satisfaction, method: :delete,  class:"btn btn-danger m-2"  %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'Gerar PDF', customer_satisfactions_path(format: :pdf),class:"btn btn-success" %>
  <%= link_to 'New Customer Satisfaction', new_customer_satisfaction_path, class:"btn btn-primary m-2" %>
</div>
