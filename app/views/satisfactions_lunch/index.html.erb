<h1><b>Almoco</b></h1>
<div class="container">
  <table class="table table-striped">
      <thead style="background-color: #F28D3C; color: white;">
        <tr>
          <th>User group</th>
          <th>Meal</th>
          <th>Rating</th>
          <th>Like</th>
          <th>Disgust</th>
          <th>Suggestion</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @customer_satisfactions.each do |customer_satisfaction| %>
            <% if customer_satisfaction.meal == "Almoco" %>
              <tr>
                <td><%= customer_satisfaction.user_group %></td>
                <td><%= customer_satisfaction.meal %></td>
                <td><%= customer_satisfaction.rating %></td>
                <td><%= customer_satisfaction.like %></td>
                <td><%= customer_satisfaction.disgust %></td>
                <td><%= customer_satisfaction.suggestion %></td>
                <td><%= link_to 'Ver detalhes', customer_satisfaction,class:"btn btn-primary m-2" %></td>
                <td><%= link_to 'Apagar', customer_satisfaction, method: :delete, class:"btn btn-danger m-2" %></td>
              </tr>
            <% end %>  
        <% end %>
      </tbody>
  </table>
</div>